<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Navbar scroll ve anchor kodlarý
        const links = document.querySelectorAll('.ultra-nav .nav-link');
        const sections = [
            { id: "genel-bakis" },
            { id: "egitim-programi" },
            { id: "nasil-ogretiyoruz" },
            { id: "ders-takvimi" },
            { id: "kariyer-destegi" },
            { id: "fiyatlar" }
        ];

        function setActiveLinkByHash() {
            let hash = window.location.hash.replace('#', '');
            if (!hash) hash = "genel-bakis";
            links.forEach((link, i) => {
                const sectionId = sections[i].id;
                if (hash === sectionId) {
                    link.classList.add('selected');
                } else {
                    link.classList.remove('selected');
                }
            });
        }

        setActiveLinkByHash();
        window.addEventListener('hashchange', setActiveLinkByHash);

        links.forEach((link, i) => {
            link.addEventListener('click', function (e) {
                e.preventDefault();
                const sectionId = sections[i].id;
                const anchor = document.getElementById("anchor-" + sectionId);
                if (anchor) {
                    anchor.scrollIntoView({ behavior: "smooth" });
                }
                window.location.hash = sectionId;
            });
        });

        // Modal ve baþvuru kodlarý
        const applyBtn = document.getElementById('applyBtn');
        const applyModal = document.getElementById('applyModal');
        const courseSelect = document.getElementById('courseSelect');
        const selectedCourseName = document.getElementById('selectedCourseName');
        const selectedCoursePrice = document.getElementById('selectedCoursePrice');
        const selectedCourseDesc = document.getElementById('selectedCourseDesc');

        if (applyBtn) {
            applyBtn.onclick = function () {
                applyModal.style.display = 'block';
            };
        }

        window.closeModal = function () {
            applyModal.style.display = 'none';
        }

        if (courseSelect) {
            courseSelect.onchange = function () {
                const selected = courseSelect.options[courseSelect.selectedIndex];
                selectedCourseName.textContent = selected.text;
                selectedCoursePrice.textContent = selected.getAttribute('data-price') ? selected.getAttribute('data-price') : "";
                selectedCourseDesc.textContent = selected.getAttribute('data-desc') || "";
            };
        }
    });
</script>

