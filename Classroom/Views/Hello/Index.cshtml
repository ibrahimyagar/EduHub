<script>
    // Responsive konumlandırma için media yerine JS kullanımı
    function updateAuthbarPosition() {
        var bar = document.querySelector('.ultra-authbar');
        if (!bar) return;
        if (window.innerWidth < 600) {
            bar.style.top = '8px';
            bar.style.right = '4px';
            bar.style.gap = '4px';
        } else if (window.innerWidth < 991) {
            bar.style.top = '16px';
            bar.style.right = '12px';
            bar.style.gap = '6px';
        } else {
            bar.style.top = '32px';
            bar.style.right = '48px';
            bar.style.gap = '12px';
        }
    }
    window.addEventListener('resize', updateAuthbarPosition);

    // Giriş introsu sadece ilk girişte ve çıkış sonrası tekrar gösterilsin
    window.addEventListener('DOMContentLoaded', function () {
        updateAuthbarPosition();

        var intro = document.getElementById('intro-animation');
        var hasSeenIntro = localStorage.getItem('eduhub_intro_seen');

        if (hasSeenIntro) {
            if (intro) intro.style.display = 'none';
            return;
        }

        // Animasyon gösteriliyor, bir daha gösterilmemesi için işaretle
        localStorage.setItem('eduhub_intro_seen', '1');

        if (intro) {
            intro.style.display = 'flex';
            var lines = document.querySelectorAll('.code-line');
            var cursor = document.querySelector('.code-cursor');
            let idx = 0;
            function showLine() {
                if (idx < lines.length) {
                    lines[idx].classList.add('visible');
                    idx++;
                    setTimeout(showLine, 400);
                } else if (cursor) {
                    cursor.classList.add('blink');
                    setTimeout(function () {
                        intro.classList.add('hide');
                    }, 1200);
                }
            }
            showLine();
        }
    });

    // Çıkış yapıldığında intro tekrar gösterilsin
    document.addEventListener('DOMContentLoaded', function () {
        // Logout linkini bul (href'te logout geçen)
        var logoutLink = document.querySelector('a[href*="Logout"], a[href*="logout"]');
        if (logoutLink) {
            logoutLink.addEventListener('click', function () {
                localStorage.removeItem('eduhub_intro_seen');
            });
        }
    });
</script>