@model ClassRoom

@{
    Layout = "_Layout2";
    ViewData["Title"] = "Ödev Oluştur";
}

@section CSSSection {
    <style>
        html, body {
            min-height: 100vh;
            width: 100%;
            background: #181028 !important;
            color: #e5e7eb !important;
        }

        .container,
        .form-label,
        .form-control,
        textarea,
        input,
        label,
        h4 {
            color: #e5e7eb !important;
        }

        .form-control,
        textarea,
        input[type="text"],
        input[type="datetime-local"] {
            background: #23243a !important;
            color: #e5e7eb !important;
            border: 1px solid #38bdf8 !important;
        }

        .form-control::placeholder,
        textarea::placeholder {
            color: #b5b8c5 !important;
            opacity: 1 !important;
        }
    </style>
}

<div class="container mt-5">
    <form asp-action="CreateHomework" method="post" class="form">
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="question" class="form-label h4">Başlık</label>
                    <input name="questionTitle" type="text" class="form-control" id="question" placeholder="Ödev başlığı giriniz">
                </div>
                <div class="mb-3">
                    <label for="instructions" class="form-label h4">Açıklama</label>
                    <textarea name="description" class="form-control" id="instructions" rows="3" placeholder="Açıklama giriniz"></textarea>
                </div>
                <input type="hidden" name="classroomId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary btn-lg mt-3" id="askButton" disabled>Oluştur</button>
            </div>
            <div class="col-md-4 mt-3 border rounded p-3 shadow-sm">
                <div class="mb-3">
                    <label for="dueDateTime" class="form-label h4">Teslim Tarihi ve Saati</label>
                    <input type="datetime-local" id="dueDateTime" name="dueDateTime" class="form-control">
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    const question = document.getElementById('question');
    const askButton = document.getElementById('askButton');

    question.addEventListener('input', () => {
        askButton.disabled = question.value === "";
    });
</script>