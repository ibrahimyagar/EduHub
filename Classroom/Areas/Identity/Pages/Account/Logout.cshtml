@page
@model LogoutModel
@{
    ViewData["Title"] = "Oturumu Kapat";
}
@section CSSSection {
    <style>
        html,body{
            background: linear-gradient(135deg,#181028 0%, #6c2eb7 100%) !important;
        }
        .logout-card-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 60vh;
        }

        .logout-card {
            background: #181c24;
            border-radius: 28px;
            box-shadow: 0 8px 32px #38bdf822, 0 1.5px 0 #6c2eb7;
            padding: 40px 36px 32px 36px;
            min-width: 340px;
            max-width: 400px;
            color: #e5e7eb;
            display: flex;
            flex-direction: column;
            align-items: center;
            border-bottom: 3px solid #232a36;
            border-right: 3px solid #232a36;
        }

        .logout-icon {
            font-size: 3.2rem;
            color: #fd5e53;
            margin-bottom: 18px;
            filter: drop-shadow(0 2px 8px #fd5e5322);
        }

        .logout-title {
            font-size: 2rem;
            font-weight: 900;
            margin-bottom: 18px;
            letter-spacing: 2px;
            text-shadow: 0 4px 18px #0008, 0 1px 0 #fff2;
            font-family: 'Montserrat', 'Segoe UI', Arial, sans-serif;
            font-style: italic;
            text-transform: uppercase;
        }

        .logout-desc {
            font-size: 1.15rem;
            margin-bottom: 24px;
            font-weight: 500;
            text-align: center;
            color: #f1f5f9;
        }

        .logout-btn {
            font-size: 1.1rem;
            font-weight: 700;
            padding: 10px 32px;
            border-radius: 18px;
            border: 2px solid #fd5e53;
            background: #fd5e53;
            color: #fff;
            transition: background 0.2s, color 0.2s, border 0.2s;
            cursor: pointer;
            text-decoration: none;
        }

            .logout-btn:hover, .logout-btn:focus {
                background: #fff;
                color: #fd5e53;
                border-color: #fd5e53;
            }

        .logout-success {
            font-size: 1.15rem;
            color: #38bdf8;
            font-weight: 600;
            margin-top: 12px;
            text-align: center;
        }
    </style>
}

<div class="logout-card-container">
    <div class="logout-card">
        <div class="logout-icon">
            <i class="fas fa-sign-out-alt"></i>
        </div>
        <div class="logout-title">Oturumu Kapat</div>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="logout-desc">
                Oturumunuzu kapatmak üzeresiniz. Devam etmek istiyor musunuz?
            </div>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="logout-btn">Çıkış Yap</button>
            </form>
        }
        else
        {
            <div class="logout-success">
                Oturumunuz başarıyla kapatıldı.
            </div>
        }
    </div>
</div>